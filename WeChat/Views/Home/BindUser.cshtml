@model Senparc.Weixin.MP.AdvancedAPIs.OAuth.OAuthAccessTokenResult
@*DPBMARK_FILE MP*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <script src="@Url.Content("~/js/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bind.js")" type="text/javascript"></script>
    <title>账号绑定</title>
    <style type="text/css">
        body {
			position: static;
			padding: 20px 0;
		}
		.title {
			font-size: .4rem;
			text-align: center;
			margin-bottom: .5rem;
		}
		.num-wrap, .name-wrap {
			display: flex;
			justify-content: center;
			align-items: center;
			font-size: .3rem;
			margin-bottom: .5rem;
		}
		.ipt {
			width: 3.6rem;
			height: .5rem;
			border: 1px solid #ccc;
			border-radius: 3px;
		}
		.ipt:focus{
    		outline: none;
    		border: 1px solid #00A600;
		}
		.sub-btn {
			margin: 0 auto;
			font-size: .3rem;
			background: #00A600;
			width: 5.2rem;
			height: .7rem;
			line-height: .7rem;
			color: #fff;
			border-radius: 5px;
			text-align: center;
		}
		dialog {
			border: 0;
		}
		.dialog-wrap {
			/*display: none;*/
			position: fixed;
			top:0;
			left:0;
			right:0;
			bottom: 0;
			font-size: .3rem;
			text-align: center;
		}
		.mask {
			position: absolute;
			width: 100%;
			height: 100%;
			background:#DCDBDC;
			opacity: .7
		}
		.dialog {
			position: absolute;
			background: #fff;
			width: 4.6rem;
			height: 170px;
			/*border: 1px solid #ccc;*/
			border-radius: 5px;
			top: 40%;
			left: 50%;
			margin-top: -65px;
			margin-left: -2.3rem;
			color: #000;
		}
		.tip {
			color: #333;
			height: 120px;
			line-height: 120px;
			text-align: center;
			border-bottom: 1px solid #eee;
		}
		.field-validation-error{
			color:red;
			text-align:center;
			font-size: .3rem;
		}
		#dia-btn {
			height: 50px;
			line-height: 50px;
		}
    </style>
    <script type="text/javascript">
        (function () {
            var docEl = document.documentElement;
            var resizeEvt = 'orientationchange' in window ? 'orientationchange' : 'resize';
            var recalc = function () {
                var clientWidth = docEl.clientWidth;
                if (!clientWidth) return;
                if (clientWidth >= 640) {
                    docEl.style.fontSize = '100px';
                } else {
                    docEl.style.fontSize = 100 * (clientWidth / 640) + 'px';
                }
            };
            if (!document.addEventListener) return;
            window.addEventListener(resizeEvt, recalc, false);
            document.addEventListener('DOMContentLoaded', recalc, false);
            recalc();
        })()
    </script>
</head>
<body>
	<div class="title">
		账号绑定
	</div>
	<div class="num-wrap"><div>家长编号：</div><input id="FamilyCode" name="FamilyCode" type="text" class="ipt" placeholder="请输入家长编号" value=""></div>
	<div class="name-wrap"><div>家长姓名：</div><input id="FamilyName" name="FamilyName" type="text" class="ipt" placeholder="请输入家长姓名" value=""></div>
	<div class="sub-btn" id="LoginSys">
		绑定
	</div>
	<div id="mes" class="field-validation-error"></div>
</body>
</html>
